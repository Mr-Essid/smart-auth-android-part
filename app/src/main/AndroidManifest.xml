        <activity
            android:name=".StreamActivity"
            android:exported="false"
            android:label="@string/title_activity_stream"
            android:theme="@style/Theme.Smartauthandroidpart" />
        <activity
            android:name=".EmployerDetails"
            android:exported="false"
            android:label="@string/title_activity_employer_details"
            android:theme="@style/Theme.Smartauthandroidpart"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".AddEmployerActivity"
            android:exported="false"
            android:label="@string/title_activity_add_employer"
            android:theme="@style/Theme.Smartauthandroidpart"
